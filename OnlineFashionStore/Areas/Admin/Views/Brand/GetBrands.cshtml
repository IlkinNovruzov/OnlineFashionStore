@model List<Brand>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Data table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Roles</strong>
                        <a asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-primary">Add Role</a>
                    </div>
                    <div class="card-body">
                        @if (Model.Count > 0)
                        {
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Delete</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody id="tblBody">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td><a asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                                            <td><a asp-area="Admin" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        }
                        else
                        {
                            <div class="alert alert-success"> There is not anything. </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="~/js/brand.js"></script>